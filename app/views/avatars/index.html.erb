<p id="notice"><%= notice %></p>

<h1>Listing Avatars</h1>

<table>
  <thead>
    <tr> <%= link_to "Re-Generate All", avatars_regenerate_path %></tr>
    <tr>
      <th>User</th>
      <th>Generated</th>
      <th>Image location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avatars.each do |avatar| %>
      <tr>
        <td><%= image_tag avatar.image_location, size: "150x150" if avatar.generated %></td>
        <td><%= avatar.user_id %></td>
        <td><%= avatar.generated %></td>
        <td><%= avatar.image_location %></td>
        <td><%= link_to 'Show', avatar %></td>
        <td><%= link_to 'Edit', edit_avatar_path(avatar) %></td>
        <td><%= link_to 'Destroy', avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

